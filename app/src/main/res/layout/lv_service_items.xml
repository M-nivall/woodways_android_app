<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:elevation="2dp"
        card_view:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/image_c"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_menu_gallery"/>
                <TextView
                    android:id="@+id/txv_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Service"
                    android:layout_toRightOf="@+id/image_c"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    app:fontFamily="sans-serif-medium" />

                <TextView
                    android:visibility="gone"
                    android:id="@+id/txv_price_c"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txv_title"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/image_c"
                    android:text="Ksh 8944.00"
                    android:textColor="#000"
                    android:textStyle="bold" />

                <TextView
                    android:visibility="gone"
                    android:id="@+id/txv_times"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txv_title"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/txv_price_c"
                    android:text="Qty"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold" />

                <TextView
                    android:visibility="gone"
                    android:id="@+id/txv_item_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txv_title"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/txv_times"
                    android:text="8"
                    android:textColor="#000"
                    android:textStyle="bold" />

                <TextView
                    android:visibility="gone"
                    android:id="@+id/txv_subTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txv_price_c"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/image_c"
                    android:text="Total 50"
                    android:textColor="#000"
                    android:textStyle="italic" />

                <TextView
                    android:visibility="gone"
                    android:id="@+id/txv_stock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txv_subTotal"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/image_c"
                    android:text="Total 2510"
                    android:textColor="#000"
                    android:textStyle="bold" />

                <View
                    android:id="@+id/line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/image_c"
                    android:background="@android:color/white" />

                <TextView
                    android:visibility="gone"
                    android:id="@+id/txv_update"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/line"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="2dp"
                    android:layout_toRightOf="@+id/image_c"
                    android:text="Change"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    app:fontFamily="sans-serif-medium" />

                <TextView
                    android:id="@+id/txv_remove"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/line"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="2dp"
                    android:layout_toRightOf="@+id/txv_update"
                    android:text="Cancel This Request"
                    android:textColor="#DC1919"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    app:fontFamily="sans-serif-medium" />

            </RelativeLayout>



        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
