<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.Varsani.Clients.Help_in">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sign in"
                android:textStyle="bold"
                android:textSize="30dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="You are required to sign in to:"
                android:textStyle="bold"
                android:textSize="15dp"
                />

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_dot"
                android:text="Access your account to view our products."
                android:textStyle="bold"
                android:textSize="15dp"
                />
            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_dot"
                android:text="Book and make payments on the app"
                android:textStyle="bold"
                android:textSize="15dp" />
            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_dot"
                android:text="View Bookings and print reciept"
                android:textStyle="bold"
                android:textSize="15dp" />

            <TextView
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="You can sign in  with your username.To sign in:"
                android:textStyle="bold"
                android:textSize="15dp"
                />

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1.Open the app."
                android:textStyle="bold"
                android:textSize="16dp"
                />
            <TextView
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2.Take one of the following actions as promted:"
                android:textStyle="bold"
                android:textSize="16dp"
                />
            <TextView
                android:layout_marginTop="5dp"
                android:layout_marginLeft="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="If you had previously signed in to your account , you are prompted to sign back in . Enter  ‘your user name’ and password to promptly sign into your account."
                android:textStyle="bold"
                android:textSize="15dp"
                />
          <ImageView
              android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="300dp"
              android:src="@drawable/cool_login" />
            <TextView
                android:layout_marginTop="5dp"
                android:layout_marginLeft="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="If you are a new user or have not previously signed in to your account , you can sign up by clicking on register here. Tap the text to register."
                android:textStyle="bold"
                android:textSize="15dp"
                />
            <ImageView
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:src="@drawable/cool_reg"
                />

            <TextView
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sign out"
                android:textStyle="bold"
                android:textSize="30dp"
                />
            <TextView
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Signing out disables access to our services as well as your history in the app documents and workflows."
                android:textStyle="bold"
                android:textSize="16dp"
                />
            <TextView
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="To Sign Out Click on the the menu icon and select the logout tab"
                android:textStyle="bold"
                android:textSize="16dp" />

            <TextView
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Order Product"
                android:textStyle="bold"
                android:textSize="30dp"
                />
            <TextView
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Signing out disables access to our services as well as your history in the app documents and workflows."
                android:textStyle="bold"
                android:textSize="16dp"
                />
            <TextView
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="To Sign Out Click on the the menu icon and select the logout tab"
                android:textStyle="bold"
                android:textSize="16dp" />

            <TextView
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Service Booking"
                android:textStyle="bold"
                android:textSize="30dp"
                />
            <TextView
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Signing out disables access to our services as well as your history in the app documents and workflows."
                android:textStyle="bold"
                android:textSize="16dp"
                />
            <TextView
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="To Sign Out Click on the the menu icon and select the logout tab"
                android:textStyle="bold"
                android:textSize="16dp" />


        </LinearLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>