<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/petcare_gradient"
    android:padding="16dp"
    tools:context=".Clients.Register">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Top Logo -->
        <ImageView
            android:id="@+id/pet_logo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/pet_logo"
            android:layout_marginTop="25dp"
            android:contentDescription="Pet Care Logo"/>

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create PetCare Account"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="10dp"/>

        <!-- Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="25dp"
            app:cardElevation="12dp"
            android:padding="20dp"
            android:backgroundTint="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- First Name -->
                <EditText
                    android:id="@+id/edt_firstname"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="First Name"
                    android:padding="12dp"
                    android:drawablePadding="12dp"
                    android:background="@drawable/pet_input"
                    android:drawableLeft="@drawable/ic_baseline_person_24"/>

                <!-- Last Name -->
                <EditText
                    android:id="@+id/edt_lastname"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Last Name"
                    android:padding="12dp"
                    android:drawablePadding="12dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/pet_input"
                    android:drawableLeft="@drawable/ic_baseline_person_24"/>

                <!-- Phone -->
                <EditText
                    android:id="@+id/edt_phone"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Phone Number"
                    android:padding="12dp"
                    android:inputType="phone"
                    android:drawablePadding="12dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/pet_input"
                    android:drawableLeft="@drawable/ic_phone"/>

                <!-- Email -->
                <EditText
                    android:id="@+id/edt_email"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Email"
                    android:padding="12dp"
                    android:inputType="textEmailAddress"
                    android:drawablePadding="12dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/pet_input"
                    android:drawableLeft="@drawable/ic_email"/>

                <!-- Password -->
                <EditText
                    android:id="@+id/edt_password"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Password"
                    android:padding="12dp"
                    android:inputType="textPassword"
                    android:drawablePadding="12dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/pet_input"
                    android:drawableLeft="@drawable/ic_lock"/>

                <!-- Confirm Password -->
                <EditText
                    android:id="@+id/edt_confirm_password"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Confirm Password"
                    android:padding="12dp"
                    android:inputType="textPassword"
                    android:drawablePadding="12dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/pet_input"
                    android:drawableLeft="@drawable/ic_lock"/>

                <!-- Loading -->
                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_marginTop="12dp"
                    android:layout_gravity="center"/>

                <!-- Register Button -->
                <Button
                    android:id="@+id/register_btn"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:text="Create Account"
                    android:textSize="18sp"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="15dp"
                    android:backgroundTint="#FF7F50"
                    android:background="@drawable/button_bg"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Already have account -->
        <TextView
            android:id="@+id/txt_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have an account? Login"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"/>

    </LinearLayout>

</ScrollView>
