<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:padding="8dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/txv_requestID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Request ID"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/txv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:layout_marginTop="6dp"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/txv_phoneNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone Number"
                android:layout_marginTop="6dp"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/txv_items"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Items Requested"
                android:layout_marginTop="6dp"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/txv_requestDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Request Date"
                android:layout_marginTop="6dp"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/txv_requestStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Request Status"
                android:layout_marginTop="6dp"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="@android:color/holo_blue_dark"
                android:visibility="gone" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="12dp"
                android:background="@android:color/darker_gray" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
