<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Logo -->
        <ImageView
            android:id="@+id/pet_logo"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:src="@drawable/pet_logo"
            android:layout_marginTop="40dp"
            android:contentDescription="Pet Care Logo"/>

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome to PetCare"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginTop="10dp"
            android:textAlignment="center"/>

        <!-- Subtitle -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login to continue"
            android:textColor="#555555"
            android:textSize="16sp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="10dp"/>

        <!-- Card Container -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            app:cardCornerRadius="25dp"
            app:cardElevation="12dp"
            android:padding="20dp"
            android:backgroundTint="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Username -->
                <EditText
                    android:id="@+id/edt_username"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Username"
                    android:textColor="#000000"
                    android:textColorHint="#777777"
                    android:padding="12dp"
                    android:drawablePadding="12dp"
                    android:background="@drawable/pet_input"
                    android:drawableLeft="@drawable/ic_baseline_person_24"/>

                <!-- Password -->
                <EditText
                    android:id="@+id/edt_password"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Password"
                    android:textColor="#000000"
                    android:textColorHint="#777777"
                    android:padding="12dp"
                    android:inputType="textPassword"
                    android:drawablePadding="12dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/pet_input"
                    android:drawableLeft="@drawable/ic_lock"/>

                <!-- Forgot Password -->
                <TextView
                    android:id="@+id/gotoforgot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Forgot Password?"
                    android:textColor="#FF7F50"
                    android:textStyle="bold"
                    android:layout_marginTop="15dp"
                    android:layout_gravity="end"/>

                <!-- Loader -->
                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_gravity="center"
                    android:layout_marginTop="12dp"/>

                <!-- Login Button -->
                <Button
                    android:id="@+id/login_btn"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:text="Login"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/button_bg" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Signup -->
        <TextView
            android:id="@+id/signupText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Not yet registered? Sign Up Now"
            android:textColor="#333333"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_marginTop="10dp"/>

        <!-- OR -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="or"
            android:textSize="15sp"
            android:textColor="#777777"
            android:layout_marginTop="10dp"/>

        <!-- Staff Login -->
        <TextView
            android:id="@+id/gotostaff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Staff Login"
            android:textColor="#333333"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_marginTop="10dp"/>

        <!-- OR -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="or"
            android:textColor="#777777"
            android:textSize="15sp"
            android:layout_marginTop="10dp"/>

        <!-- Supplier Login -->
        <TextView
            android:id="@+id/go_supplier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Supplier Login"
            android:textColor="#333333"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"/>

    </LinearLayout>

</ScrollView>
